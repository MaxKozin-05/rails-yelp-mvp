<h1>Welcome to <%=@restaurant.name%></h1>

<p>Adress: <%= @restaurant.address%></p>
<p>Category: <%= @restaurant.category%></p>
<p>Reviews</p>
<%= link_to "write review", new_restaurant_review_path(@restaurant) %>
<% @restaurant.reviews.each do |review| %>
  <p><%= review.content %></p>
  <p><%= review.rating %></p>
<% end %>
